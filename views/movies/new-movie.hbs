<h2>New Movie</h2>


<form action="/movies/create" method="post">
  <label> Title:
    <input type="text" name="title" />
  </label>

  <label> Genre:
    <input type="text" name="genre" />
  </label>

  <label> Plot:
    <input type="text" name="plot" />
  </label>

 <label> Cast:
    <select name="cast" id="cast" multiple>
      {{#each celebs}}
      <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </label>

  <button type="submit">Add the Blockbuster Hit!</button>
</form>